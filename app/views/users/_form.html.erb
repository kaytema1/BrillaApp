<div class="row">
<%= form_for(@user ,:class => "form-horizontal") do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group text-info">
    <%= f.label :username,:class => "col-sm-2 control-label" %>
    <%= f.text_field :username,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :first_name,:class => "col-sm-2 control-label"  %>
    <%= f.text_field :first_name,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :middle_name,:class => "col-sm-2 control-label"  %>
    <%= f.text_field :middle_name,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :last_name ,:class => "col-sm-2 control-label" %>
    <%= f.text_field :last_name,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :gender ,:class => "col-sm-2 control-label"  %>
    <%= f.text_field :gender,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :date_of_birth ,:class => "col-sm-2 control-label" %>
    <%= f.date_select :date_of_birth,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :country ,:class => "col-sm-2 control-label" %>
    <%= f.text_field :country,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :region_state,:class => "col-sm-2 control-label"  %>
    <%= f.text_field :region_state,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :city_town,:class => "col-sm-2 control-label"  %>
    <%= f.text_field :city_town,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :neighborhood,:class => "col-sm-2 control-label"  %>
    <%= f.text_field :neighborhood,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :address,:class => "col-sm-2 control-label"  %>
    <%= f.text_area :address,:class => "form-control" %>
  </div>
  <div class="form-group text-info">
    <%= f.label :phone_number,:class => "col-sm-2 control-label"  %>
    <%= f.text_field :phone_number,:class => "form-control" %>
  </div>
  <div class="form-group">

    <%= f.submit :class => "btn btn-primary btn-lg btn-block  col-sm-offset-2" %>
  </div>
<% end %>
</div>